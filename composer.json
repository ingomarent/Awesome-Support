{
    "require": {
        "gambitph/titan-framework": "dev-master",
        "ericmann/wp-session-manager": "dev-master"
    },
    "archive": {
        "exclude": [
            ".gitignore",
            "*.sublime-workspace",
            "*.sublime-project",
            "apigen.neon",
            "composer.json",
            "composer.lock",
